= form_for @user, html: {class: 'pure-form pure-form-aligned'} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  %fieldset

    .pure-control-group
      .field
        = f.label :name
        = f.text_field :name

    .pure-control-group
      .field
        = f.label :can_edit_users
        = f.check_box :can_edit_users

    .pure-control-group
      .field
        = f.label :username
        = f.text_field :username

    .pure-control-group
      .field
        = f.label :password
        = f.password_field :password
        (leaving blank will keep password the same)

    .pure-controls
      .actions
        = f.submit 'Save', class: 'pure-button pure-button-primary'
