!!!
%html
  %head
    %title Feedback
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic"
    = stylesheet_link_tag    "http://yui.yahooapis.com/pure/0.3.0/pure-min.css"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "//www.google.com/jsapi", "chartkick"
    = csrf_meta_tags
  %body(class="rails-#{controller_name}" id="rails-#{controller_name}-#{action_name}")
    = yield